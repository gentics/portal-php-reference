{
    "name": "gentics/portal-php-laravel-project",
    "type": "project",
    "description": "Portal | php base project for Laravel",
    "require": {
        "php": "^8.1",
        "gentics/portal-php-laravel": "^2.0.2"
    },
    "require-dev": {
        "composer/composer": "^2.3.7",
        "isaac/composer-git-hooks": "^2.0.0",
        "enlightn/security-checker": "~1.10.0",
        "fakerphp/faker": "^1.9.1",
        "mockery/mockery": "^1.4.4",
        "friendsofphp/php-cs-fixer": "~3.8.0",
        "overtrue/phplint": "~5.2.2",
        "phpunit/phpunit": "^9.5.21",
        "squizlabs/php_codesniffer": "~3.7.1",
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@install-portal-php-config-files",
            "@install-portal-php-graphql-files"
        ],
        "pre-commit": [
			"composer --working-dir=portal test"
		],
        "lint": [
			"phplint app/",
			"php-cs-fixer fix --dry-run --verbose",
			"phpcs app/"
		],
        "securitycheck": [
			"security-checker security:check composer.lock"
		],
        "phpunit": [
			"phpunit tests/"
		],
        "test": [
			"@composer validate",
			"@lint",
			"@phpunit",
			"@securitycheck"
		],
		"fixcode": [
			"php-cs-fixer fix"
		],
        "install-portal-php-config-files": [
            "@php artisan vendor:publish --tag=gpphp-config --ansi --force"
        ],
        "install-portal-php-graphql-files": [
            "@php artisan vendor:publish --tag=gpphp-graphql --ansi --force"
        ],
        "build": [
			"@composer install",
			"mkdir -p .reports",
			"./vendor/bin/phplint app/",
			"./vendor/bin/php-cs-fixer fix --dry-run --format=junit > .reports/php-cs-fixer.xml || true",
			"./vendor/bin/phpcs --warning-severity=6 --report=junit --report-file=.reports/phpcs.xml app/ || true",
			"./vendor/bin/phpunit --log-junit=.reports/phpunit.xml tests/ || true"
		]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "merge-plugin": {
            "include": [
                "composer.override.json"
             ],
             "replace": true
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "isaac/composer-git-hooks": false,
            "wikimedia/composer-merge-plugin": true
         }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.apa-it.at/api/composer/php"
        }
    ]
}
