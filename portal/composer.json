{
	"name": "gentics/portal-php-reference",
	"description": "Gentics Portal | php Reference Implementation",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"type": "project",
	"require": {
		"php": "^7.1.3",
		"fideloper/proxy": "^4.0",
		"gentics/portal-php": "^0.2.0",
		"laravel/framework": "5.8.*",
		"laravel/tinker": "^1.0",
		"proai/laravel-handlebars": "^1.6",
		"zordius/lightncandy": "1.2.2"
	},
	"require-dev": {
		"filp/whoops": "^2.0",
		"fzaninotto/faker": "^1.4",
		"mockery/mockery": "^1.0",
		"nunomaduro/collision": "^2.0",
		"beyondcode/laravel-dump-server": "^1.0",
		"brainmaestro/composer-git-hooks": "dev-master",
		"friendsofphp/php-cs-fixer": "^2.13@dev",
		"overtrue/phplint": "dev-master",
		"phpunit/phpunit": "^7.4",
		"sensiolabs/security-checker": "^5.0@dev",
		"squizlabs/php_codesniffer": "^3.0@dev",
		"wikimedia/composer-merge-plugin": "^1.4"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app/"
		},
		"files": [
			"app/helpers.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"extra": {
		"laravel": {
			"dont-discover": [
			]
		},
		"merge-plugin": {
			"include": [
				"composer.override.json"
			],
			"replace": true
		}
	},
	"scripts": {
		"post-root-package-install": [
			"@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
		],
		"post-create-project-cmd": [
			"@php artisan key:generate"
		],
		"post-autoload-dump": [
			"Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
			"@php artisan package:discover"
		],
		"post-install-cmd": "\"./vendor/bin/cghooks\" add --ignore-lock",
		"post-update-cmd": "\"./vendor/bin/cghooks\" update",
		"pre-commit": [
			"@test"
		],
		"lint": [
			"phplint app/",
			"php-cs-fixer fix --dry-run --verbose",
			"phpcs app/"
		],
		"securitycheck": [
			"security-checker security:check composer.lock"
		],
		"phpunit": [
			"phpunit tests/"
		],
		"test": [
			"@composer validate",
			"@lint",
			"@phpunit",
			"@securitycheck"
		],
		"fixcode": [
			"php-cs-fixer fix"
		],
		"build": [
			"@composer install",
			"mkdir -p .reports",
			"./vendor/bin/phplint app/",
			"./vendor/bin/php-cs-fixer fix --dry-run --format=junit > .reports/php-cs-fixer.xml || true",
			"./vendor/bin/phpcs --warning-severity=6 --report=junit --report-file=.reports/phpcs.xml app/ || true",
			"./vendor/bin/phpunit --log-junit=.reports/phpunit.xml tests/ || true",
			"./vendor/bin/security-checker security:check composer.lock"
		]
	},
	"config": {
		"preferred-install": "dist",
		"sort-packages": true,
		"optimize-autoloader": true
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"repositories": [
		{
			"type": "composer",
			"url": "https://repo.apa-it.at/api/composer/php"
		}
	]
}
